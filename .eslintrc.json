{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:node/recommended-module"
    ],
    "plugins": [],
    "overrides": [],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        // "requireConfigFile": false
    },
    "rules": {
        "node/no-unsupported-features/es-syntax": [
            "error",
            {
                "version": ">=8.3.0"
            }
        ],
        "no-bitwise": "off",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-process-exit": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-shadow": "warn",
        "no-undef": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always",
                "jsx": "always"
            }
        ],
        "no-param-reassign": "off",
        "no-alert": "off"
    }
}